<div class="reservation_index_table">
  <h1>予約済み一覧</h1>
  <table class="table">
    <thead>
      <tr>
        <th scope="col">画像</th>
        <th scope="col">施設名</th>
        <th scope="col">紹介文</th>
        <th scope="col">合計料金</th>
        <th scope="col">チェックイン</th>
        <th scope="col">チェックアウト</th>
        <th scope="col">予約確定日時</th>
        <th scope="col">再予約</th>
        <th scope="col">予約を削除</th>
      </tr>
    </thead>

    <tbody>
      <% @reservations.each do |r| %>
      <% @rooms.each do |rom| %>
        <tr>
          <td scope="row"><img src=<%= rom.image %>></td>
          <td><%= rom.name %></td>
          <td><%= rom.detail %></td>
          <td><%= rom.price %></td>
          <td><%= r.check_in.strftime("%Y/%m/%d") %></td>
          <td><%= r.check_out.strftime("%Y/%m/%d") %></td>
          <td><%= r.created_at.to_s(:datetime_jp) %></td>
          <td><%= link_to("再予約", new_reservation_path) %></td>
          <td><%= link_to('施設を削除', "/reservations/#{r.id}", method: :delete) %></td>
        </tr>
      <% end %>
      <% end %>
    </tbody>
  </table>
</div>