<h1>プロフィール</h1>

<%= form_with model: @user, url: users_update_path, method: :patch, scope: :user do |f| %>
    <div class="field">
    <%= f.label :image, value: "プロフィール画像" %><br />
    <%= f.file_field :image, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :name, value: "名前" %><br />
    <%= f.text_field :name, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :introduction, value: "自己紹介" %><br />
    <%= f.text_area :introduction, autofocus: true %>
  </div>

  <div class="actions">
    <%= f.submit '更新' %>
  </div>

<% end %>